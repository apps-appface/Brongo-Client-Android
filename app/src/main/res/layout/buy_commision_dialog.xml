<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center">

    <ImageView
        android:id="@+id/cancel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="false"
        android:elevation="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/cancel" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_corner">


            <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                android:id="@+id/termstv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:gravity="center|left"
                android:text="Terms &amp; Conditions"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/termstv"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/view_color" />

            <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                android:id="@+id/terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:text="@string/terms_conditions"
                android:textColor="@color/appPrimaryFont"
                android:textSize="15sp"
                android:textStyle="normal" />

            <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                android:id="@+id/selectcommision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/terms"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Select Commission"
                android:textColor="@color/appPurple"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/selectcommision"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@color/view_color" />

            <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                android:id="@+id/newProp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/view2"
                android:layout_marginLeft="20dp"
                android:gravity="center|left"
                android:text="For New Property"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                android:id="@+id/newPropPercent"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/view2"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="0%"
                android:textColor="@color/appPrimaryFont"
                android:textSize="15sp"
                android:textStyle="normal" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/newProp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/view_color" />

            <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                android:id="@+id/resaleProp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/view3"
                android:layout_marginLeft="20dp"
                android:gravity="center|left"
                android:text="For Resale Property"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/LL1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/resaleProp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/resaleRb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:backgroundTint="@color/appPurple"
                    android:checked="true"
                    android:text="1%"
                    android:textColor="@color/appPrimaryFont" />

                <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                    android:id="@+id/recommendedtv"
                    android:layout_width="115dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/resaleRb"
                    android:background="@drawable/label"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Brongo recommended"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:id="@+id/whyLL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                        android:id="@+id/why"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/whyIM"
                        android:text="Why"
                        android:textColor="@color/appPurple"
                        android:textSize="10sp"
                        android:textStyle="normal" />

                    <ImageView
                        android:id="@+id/whyIM"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/why" />
                </LinearLayout>

            </RelativeLayout>

            <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                android:id="@+id/negotiate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/LL1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Negotiate"
                android:textColor="@color/appPrimaryFont"
                android:textSize="15sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/negotiate_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/negotiate"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rb1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.75%"
                        android:textColor="@color/appPrimaryFont" />

                    <RadioButton
                        android:id="@+id/rb2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="0.5%"
                        android:textColor="@color/appPrimaryFont" />
                </RelativeLayout>
            </RadioGroup>

            <RelativeLayout
                android:id="@+id/toast_messageRL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/LL1"
                android:visibility="gone">

                <View
                    android:id="@+id/arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="31dp"
                    android:layout_marginTop="-12dp"
                    android:background="@drawable/why_2" />

                <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/arrow"
                    android:layout_marginRight="22dp"
                    android:background="@drawable/why_1"
                    android:padding="6dp"
                    android:text="This is the market standards, you will be guarenteed to find a broker and broker
will be motivated to close your deal"
                    android:textColor="@color/appPrimaryFont"
                    android:textSize="9sp"
                    android:textStyle="normal" />

            </RelativeLayout>

            <com.turnipconsultants.brongo_client.CustomWidgets.BrongoButton
                android:id="@+id/accept"
                style="@style/BrongoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/negotiate_radio"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="20dp"
                android:text="Accept" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>