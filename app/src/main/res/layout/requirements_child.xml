<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Furnishing"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
        android:id="@+id/valuewithBg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/tagview_selected_background"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="8dp"
        android:text="Semi Furnished"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
        android:id="@+id/valuewithoutBG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="House should be pet friendly"
        android:textColor="@color/appPrimaryFont"
        android:textSize="15sp" />
</LinearLayout>