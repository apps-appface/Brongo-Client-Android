<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/appBar"
        layout="@layout/app_bar_main" />

    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
        android:id="@+id/title"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/pager_card"
        android:layout_below="@+id/appBar"
        android:layout_marginRight="4dp"
        android:background="@drawable/violet_bar"
        android:elevation="10dp"
        android:gravity="center_horizontal"
        android:paddingTop="6dp"
        android:text="Buy/Residential"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="normal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:visibility="visible"
                app:cardCornerRadius="5dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location/Street Name"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                        android:id="@+id/location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Marathahalli, Bangalore"
                        android:textColor="@color/appPrimaryFont"
                        android:textSize="15sp" />

                    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Area in Marathalli"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                        android:id="@+id/area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Sector 5, Marathahalli, Bangalore"
                        android:textColor="@color/appPrimaryFont"
                        android:textSize="15sp" />

                    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Name of Project / Society"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                        android:id="@+id/projectname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Raheja Apartments"
                        android:textColor="@color/appPrimaryFont"
                        android:textSize="15sp" />

                    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Property Type"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                        android:id="@+id/propType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/tagview_selected_background"
                        android:gravity="center"
                        android:paddingBottom="8dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="8dp"
                        android:text="Apartment/Flat"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Bedroom"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                        android:id="@+id/bedroom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/tagview_selected_background"
                        android:gravity="center"
                        android:paddingBottom="8dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="8dp"
                        android:text="3 BHK"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Budget"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                        android:id="@+id/budget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text=" ₹ 10,000 -  ₹ 50,000"
                        android:textColor="@color/appPrimaryFont"
                        android:textSize="15sp" />

                    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Marital Status"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                        android:id="@+id/marital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/tagview_selected_background"
                        android:gravity="center"
                        android:paddingBottom="8dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="8dp"
                        android:text="Married"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Avoid Project"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                        android:id="@+id/avoid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="BDA Complex"
                        android:textColor="@color/appPrimaryFont"
                        android:textSize="15sp" />

                    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Orientation"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                        android:id="@+id/orientation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/tagview_selected_background"
                        android:gravity="center"
                        android:paddingBottom="8dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="8dp"
                        android:text="East"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Furnishing"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                        android:id="@+id/furnishing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/tagview_selected_background"
                        android:gravity="center"
                        android:paddingBottom="8dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="8dp"
                        android:text="Semi Furnished"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Any other requirements (Please specify)"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                        android:id="@+id/otherReq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="House should be pet friendly"
                        android:textColor="@color/appPrimaryFont"
                        android:textSize="15sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>