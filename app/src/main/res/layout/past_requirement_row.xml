<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:elevation="10dp"
    app:cardBackgroundColor="@color/appBGWhite"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                android:id="@+id/nameBTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BalaSubramanayam"
                android:textColor="@color/appPrimaryBlue"
                android:textSize="15sp"/>

            <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                android:id="@+id/postTypeBTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/past_req_tag"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="Buy/Residential"
                android:textColor="@color/white"
                android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COMMISSION"
                android:textColor="@color/appPrimaryBlue"
                android:textSize="13sp" />

            <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="|"
                android:textColor="@color/appPrimaryBlue"
                android:textSize="16sp" />

            <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                android:id="@+id/commissionBTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="5600"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/divider_color"
            android:layout_marginTop="15dp"/>

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/property_detail_FL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/popular_locations_TV"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            zhy:max_select="1"></com.zhy.view.flowlayout.TagFlowLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/divider_color"
            android:layout_marginTop="15dp" />

        <com.turnipconsultants.brongo_client.CustomWidgets.BrongoButton
            android:id="@+id/restartSearchBTN"
            style="@style/BrongoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESTART SEARCH"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:minHeight="0dp"

            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</android.support.v7.widget.CardView>