<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="5dp"
    android:background="@drawable/cobalt_bg">

    <RelativeLayout
        android:id="@+id/firstrowRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp">

        <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="A month ago"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/star"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/star"
            android:layout_centerVertical="true"/>

        <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/star"
            android:text="3.0"
            android:textColor="@color/appPrimaryBlue"
            android:textSize="15sp"
            android:textStyle="normal"
            android:maxLines="3"/>

    </RelativeLayout>

    <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstrowRl"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:text="Lorem ipsum dolor sit amet, consecet adipiscing elit. Lorem ipsum dolor sit consecet adipiscing elit..."
        android:textColor="@color/appPrimaryFont"
        android:textSize="15sp"
        android:textStyle="normal" />


</RelativeLayout>