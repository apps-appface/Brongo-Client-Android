<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_marginLeft="30dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"

        android:background="@drawable/rounded_corner">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/chat2" />

        <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
            android:textStyle="normal"
            android:id="@+id/bchattv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="B-Chat"
            android:textColor="@color/appPrimaryBlue"
            android:textSize="12sp" />

        <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
            android:textStyle="normal"
            android:id="@+id/chattv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bchattv"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/chat_dialog_line1"
            android:textColor="@color/appPrimaryFont"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/chat2tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chattv"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                android:textStyle="normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="To change, go to the"
                android:textColor="@color/appPrimaryFont"
                android:textSize="12sp" />

            <com.turnipconsultants.brongo_client.CustomWidgets.BrongoTextView
                android:id="@+id/profile_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/chattv"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text=" Profile settings"
                android:textColor="@color/appPrimaryBlue"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <com.turnipconsultants.brongo_client.CustomWidgets.BrongoButton
            style="@style/BrongoButton"
            android:id="@+id/ok_BTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chat2tv"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:text="OK, GOT IT"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/cancel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="false"
        android:src="@drawable/cancel"/>

</RelativeLayout>